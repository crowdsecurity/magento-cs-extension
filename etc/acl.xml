    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="CrowdSec_Engine::admin" title="CrowdSec" translate="title" sortOrder="40">
                    <resource id="CrowdSec_Engine::manage_config_actions" title="Manage Config Actions" translate="title" sortOrder="40"/>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
