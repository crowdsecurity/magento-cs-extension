<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="crowdsec">
        <job name="crowdsec_engine_send_signal" instance="CrowdSec\Engine\Cron\SendSignals" method="execute">
            <config_path>crowdsec_engine/crons/send_signals_expr</config_path>
        </job>
        <job name="crowdsec_engine_refresh_cache" instance="CrowdSec\Engine\Cron\RefreshCache" method="execute">
            <config_path>crowdsec_engine/crons/refresh_cron_expr</config_path>
        </job>
    </group>
</config>
